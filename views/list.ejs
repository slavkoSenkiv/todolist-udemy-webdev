<%- include('header') -%>

    <% tasksLst.forEach((task)=>{ %>
        <form action="/delete" method="post">
            <div class="item">
                <input 
                    type="checkbox" 
                    name="deleteTaskId" 
                    value="<%= task.id %>" 
                    onchange="this.form.submit()">
                <p><%= task.task_name %></p>
            </div>
        </form>
    <% }); %>

        <form action=' <%= route %> ' method="post" class="item">
            <input type="text" name="newTask" placeholder="new task" autocomplete="off">
            <button type="submit">+</button>
        </form>

